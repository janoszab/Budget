<div class="col-md-12" role="main">
    <h1>Add Account</h1>

    <form class="clearfix" action="/user/account" method="post">
        <div class="form-group form-group-sm">
            <label for="account">Account</label>
            <input type="input" name="tag" class="form-control" id="account" placeholder="Account" value="{{model.name}}">
        </div>
        <div class="form-group form-group-sm">
            <label for="type">Type</label>
            <input type="input" name="type" class="form-control" id="type" placeholder="Type" value="{{model.type}}">
        </div>

        <button type="submit" class="btn btn-primary btn-xs pull-right">Save account</button>
    </form>

</div>
